<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rlRootDeviceLog"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/colorBackGroundTint">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarDeviceLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarDeviceLog"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/bg_gradient_app"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </com.google.android.material.appbar.AppBarLayout>


    <FrameLayout
            android:layout_below="@+id/appbarDeviceLog"
            android:id="@+id/deviceLogContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

</RelativeLayout>
